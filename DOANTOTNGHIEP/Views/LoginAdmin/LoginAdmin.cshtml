@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Admin/layout_admin/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Vui lòng đăng nhập</h3>
                </div>
                <div class="panel-body">
                    <fieldset>
                        <div class="form-group">
                            <input class="form-control" placeholder="E-mail" id="email" name="email" type="email" autofocus>
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" id="password" name="password" type="password" value="">
                        </div>
                        <input type="button" id="login" class="btn btn-lg btn-success btn-block" value="Đăng Nhập" />
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
