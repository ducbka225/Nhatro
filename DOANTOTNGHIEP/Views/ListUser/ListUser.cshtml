@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Admin/layout_admin/_LayoutAdmin.cshtml";
}

<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    User
                    <small>List</small>
                </h1>
            </div>
            <!-- /.col-lg-12 -->
            <table class="table table-striped table-bordered table-hover" id="dataTables">
                <thead>
                    <tr align="center">
                        <th>ID</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Số Điện Thoại</th>
                        <th>Balance</th>
                        <th>Quyền</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.User)
                    {
                    <tr class="odd gradeX" align="center">
                        <td>@item.Id</td>
                        <td>@item.LoginId</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Balance</td>
                        @if (@item.Admin == 1)
                        {
                            <td>Admin</td>
                        }
                        else
                        {
                            <td>Member</td>
                        }

                        <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="#">Sửa</a></td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->