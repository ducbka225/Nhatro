@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Admin/layout_admin/_LayoutAdmin.cshtml";
}

    <!-- Page Content -->
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Danh Sách
                        <small>Phòng</small>
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
                <table class="table table-striped table-bordered table-hover" id="dataTables">
                    <thead>
                        <tr align="center">
                            <th>ID</th>
                            <th>Tiêu Đề</th>
                            <th>Loại Phòng</th>
                            <th>Giá</th>
                            <th>Diện Tích</th>
                            <th>Hình ảnh</th>
                            <th>Khu Vực</th>
                            <th>Ngày Đăng</th>
                            <th>Trạng Thái</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach ( var item in ViewBag.ListAll)
                        {
                        <tr class="odd gradeX" align="center">
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.ProducType</td>
                            <td>@item.Price Vnđ</td>
                            <td>@item.Acreage m2</td>
                            <td>
                                <img src="~/Content/images/@item.Image" alt="" class="cover img-reponsive" width="40" height="40"><br />
                                <a href="@Url.Action("Image", "ListImage", new {@productid = item.Id })">Xem Thêm</a>
                            </td>
                            <td>@item.District</td>
                            <td>@item.CreatedDate</td>
                            @if (@item.IsActive == 1)
                            {
                                <td><button type="button" class="btn btn-success">Hiện</button></td>
                            }
                            else
                            {
                                <td><button type="button" class="btn btn-danger">Ẩn</button></td>
                            }

                            <td class="center"><i class="fa fa-pencil fa-fw"></i> <a href="@Url.Action("editProduct", "Admin_editProduct", new {@productid =  @item.Id})">Sửa</a></td>
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <!-- /#page-wrapper -->
